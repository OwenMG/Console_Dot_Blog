<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      {{post.description}}
    </p>
    <p class="signature">Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7 commentarea">
  {{#each comments as |comment| }}
  
    <div>
        <p>
        {{content}}
        </p>
        <p class="signature">Commented by {{user.name}} on {{format_date date_created}}</p>
        </div>
    {{/each}}
    </div>
  </div>

</div>
{{/each}}
