<div class="text-center">
    <div class="post">
        <h2>{{name}}</h2>
        <p>{{description}}</p>
        <p class="signature">Posted by {{user.name}} on {{format_date date_created}}</p>
    </div>
  
  {{#if comments.length}}
  <h2>Comments</h2>
  {{#each comments as |comment| }}
  <div>
    <p>
      {{content}}
    </p>
    <p class="signature">Commented by {{user.name}} on {{format_date date_created}}</p>
    </div>
{{/each}}
{{/if}}
  <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-desc">Add a comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Submit</button>
      </div>
    </form>
  
</div>

<script src="./js/post.js"></script>